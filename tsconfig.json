{
  "extends": "tsconfig/base.json",
  "include": [
    "packages",
    "types",
    "scripts",
    "examples",
    "rollup.config.ts",
    ".eslintrc.js"
  ],
  "compilerOptions": {
    "allowJs": false,
    "baseUrl": ".",
    "typeRoots": ["./node_modules/@types", "./types"],
    "paths": {
      "@acme/types/src/*": ["./packages/types/src/*"],
    },
    "types": ["node"]
  }
}